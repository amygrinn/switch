{
  "name": "@taylorgrinn/switch",
  "version": "2.0.0",
  "description": "Switch hook and sass mixin",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/taylorgrinn/switch.git"
  },
  "author": "Tyler Grinn",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all clean -p ts demo",
    "clean": "rimraf index.js dist",
    "demo": "webpack --config demo/webpack.config",
    "demo:w": "webpack-dev-server --config demo/webpack.config",
    "lint": "npm run lint:fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettier": "npm run prettier:fix",
    "prettier:check": "prettier -c .",
    "prettier:fix": "prettier --write .",
    "quality": "npm run quality:fix",
    "quality:check": "run-s --print-label --silent lint:check prettier:check",
    "quality:fix": "run-p --print-label --silent lint:fix prettier:fix",
    "serve": "http-server",
    "start": "npm-run-all ts -p ts:w demo:w",
    "test": "mocha tests/**/*.spec.js --exit",
    "test:w": "npm run test -- -w",
    "ts": "tsc",
    "ts:w": "npm run ts -- -w"
  },
  "files": [
    "_index.scss",
    "_util.scss",
    "index.js",
    "index.ts"
  ],
  "keywords": [
    "react",
    "login",
    "webpack"
  ],
  "peerDependencies": {
    "react": "^18"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/runtime": "^7.17.9",
    "@types/react": "^18.0.1",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "babel-loader": "^8.2.4",
    "clean-webpack-plugin": "^4.0.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^6.7.1",
    "eslint": "^8.13.0",
    "eslint-config-alloy": "^4.5.1",
    "eslint-plugin-react": "^7.29.4",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.20.2",
    "prettier": "^2.6.2",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-package": "^1.3.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.50.0",
    "sass-loader": "^12.6.0",
    "serve-static": "^1.15.0",
    "style-loader": "^3.3.1",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1"
  },
  "types": "index.ts",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "browserslist": [
    "defaults"
  ],
  "eslintConfig": {
    "extends": [
      "alloy",
      "alloy/react",
      "alloy/typescript"
    ],
    "env": {
      "browser": true,
      "mocha": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "eol-last": [
        "error",
        "always"
      ]
    },
    "ignorePatterns": [
      "/lib",
      "/dist",
      "webpack.config.js"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
