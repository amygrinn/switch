{
  "compilerOptions": {
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "esnext",
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["index.ts"]
}
